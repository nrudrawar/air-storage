<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path , class: "navbar-brand" do %>
    <i class="fas fa-warehouse logo-img"></i>
    <% end %>
  <h1 class="site-title">Air-Storage</h1>

  <% unless current_page?(root_path) %>
    <%= form_tag storage_spaces_path, method: :get do %>
    <div class="row">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find your perfect storage space"
        %>
        <%= submit_tag "Search", class: "btn btn-primary search-button" %>
      <% end %>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My Spaces", my_spaces_path , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Bookings", my_bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/nrudrawar", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a storage space", new_storage_space_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
